{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
{#                <div class="bg-light">#}
                    <h2 class="deepshadow">Connexion</h2>

                    {% if hasError %}
                       <div class="alert alert-danger">Une erreur est survenue,
                       l'adresse email ou le mot de passe n'est pas valide.</div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail" required value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Se connecter !</button>
                        </div>
                    </form>
{#                </div>#}
            </div>
        </div>
    </div>

{% endblock %}