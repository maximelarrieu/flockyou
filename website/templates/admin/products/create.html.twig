{% extends 'admin/base.html.twig' %}

{% block title %}Création d'un produit{% endblock %}

{% form_theme form _self %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('build/form.css') }}">

    <div class="container">
        <h2 class="deepshadow">Création d'un produit</h2>

        <div class="login-form bg-light py-3 px-3">
            {{ form_start(form) }}

            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Créer un produit</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}