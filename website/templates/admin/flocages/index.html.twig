{% extends 'admin/base.html.twig' %}

{% block title %}Administration des flocages de {{ team }}{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('build/form.css') }}">

    <div class="container">
        <h2 class="deepshadow">Gestion des flocages {{ team }}</h2>
        <div class="login-form bg-light py-3 px-3">
            <table class="table table-hover">
                <h5 class="float-left">Liste des flocages de l'Ã©quipe <strong>{{ team }}</strong></h5>
                <a href="{{ path('admin_flocage_add', {'team': team}) }}" class="btn btn-success float-right mb-2"><i class="fas fa-plus mr-2"></i>Ajouter un flocage</a>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Flocages</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for flocage in flocages %}
                    <tr class="">
                        <td>{{ flocage.id }}</td>
                        <td>{{ flocage.flocage }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('admin_flocage_edit', {'team': team, 'id': flocage.id}) }}" class="btn btn-primary mr-2"><i class=" fas fa-pen"></i></a>
                                <a href="{{ path('admin_flocage_destroy', {'team' : team, 'id': flocage.id}) }}" class="btn btn-danger"><i class=" fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}