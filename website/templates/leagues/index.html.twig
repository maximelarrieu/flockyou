{% extends 'base.html.twig' %}

{% block title %}{{ league_name }} - Flockyou{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset("build/cl.css") }}"/>
    {% if league_name == 'Ligue des champions' %}
        <div class="product-league" style="background-image: url({{ asset('build/images/leagues/clbanner.jpg') }});">
            <div class="container">
                <h2 class="deepshadow">{{ league_name }}</h2>
            </div>
        </div>
    {% else %}
        <div class="product-league" style="background-image: url({{ asset('build/images/leagues/eurobanner.jpg') }});">
            <div class="container">
                <h2 class="deepshadow">{{ league_name }}</h2>
            </div>
        </div>
    {% endif %}
    <div class="sidenav">
        <h4 class="mb-4">Affiner recherche :</h4>
        <h5>Statut :</h5>
        {% for state in states %}
            <a href="#">
                <input type="checkbox" id="state" name="state" checked>
                <label for="scales">{{state.state}}</label>
            </a>
        {% endfor %}
        <h5 class="mt-4">Ã‰quipes :</h5>
        {% for team in teams %}
        <a href="#">
            <input type="checkbox" id="team" name="team" checked>
            <label for="scales">{{ team.name }}</label>
        </a>
        {% endfor %}
    </div>
    <div class="main">
        <h3></h3>
        <div class="mainwrapper row">
            {% for product in products %}
                {{ include('products/cardProduct.html.twig') }}
            {% endfor %}
{#            {{ pagination.display() }}#}
        </div>
    </div>
{% endblock %}
